{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "hooks": {
    "before:init": ["pnpm install"],
    "before:release": ["pnpm build"],
    "after:release": []
  },
  "github": {
    "release": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": ["packages/*/package.json"]
    }
  },
  "npm": false
}
