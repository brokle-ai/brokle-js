{
  "name": "brokle",
  "version": "0.2.1",
  "description": "OpenTelemetry-native observability SDK for AI applications",
  "author": "Brokle AI",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.0.0"
  },
  "dependencies": {
    "@opentelemetry/exporter-logs-otlp-proto": "^0.50.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.50.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.50.0",
    "@opentelemetry/resources": "^1.20.0",
    "@opentelemetry/sdk-logs": "^0.50.0",
    "@opentelemetry/sdk-metrics": "^1.20.0",
    "@opentelemetry/sdk-trace-base": "^1.20.0",
    "@opentelemetry/sdk-trace-node": "^1.20.0",
    "@opentelemetry/semantic-conventions": "^1.20.0"
  },
  "optionalDependencies": {
    "@opentelemetry/exporter-logs-otlp-grpc": "^0.50.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.50.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.50.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brokle-ai/brokle-js.git",
    "directory": "packages/brokle"
  },
  "homepage": "https://github.com/brokle-ai/brokle-js/tree/main/packages/brokle#readme",
  "bugs": {
    "url": "https://github.com/brokle-ai/brokle-js/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "opentelemetry",
    "otel",
    "observability",
    "tracing",
    "ai",
    "llm",
    "genai",
    "monitoring",
    "apm"
  ]
}
